pre_src_configure() {
	# Reason: -Wl,lazy in LDFLAGS and -fno-plt assumes -Wl,now
	# The build logs indicate some modules were linked with
	# -Wl,lazy binding.
	einfo "Removing -fno-plt"
	CFLAGS=$(echo "${CFLAGS}" | sed -e "s|-fno-plt||g")
	CXXFLAGS=$(echo "${CXXFLAGS}" | sed -e "s|-fno-plt||g")
	LDFLAGS=$(echo "${LDFLAGS}" | sed -e "s|-fno-plt||g")
	export CFLAGS CXXFLAGS LDFLAGS
}
