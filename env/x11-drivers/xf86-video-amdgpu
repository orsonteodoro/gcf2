pre_src_configure() {
	# Prevents: undefined symbol: fbComposite
	# Reason: -Wl,lazy in LDFLAGS and -no-plt assumes -Wl,now
	einfo "Removing no-plt"
	CFLAGS=$(echo "${CFLAGS}" | sed -e "s|-no-plt||g")
	CXXFLAGS=$(echo "${CXXFLAGS}" | sed -e "s|-no-plt||g")
	LDFLAGS=$(echo "${LDFLAGS}" | sed -e "s|-no-plt||g")
	export CFLAGS CXXFLAGS LDFLAGS
}
